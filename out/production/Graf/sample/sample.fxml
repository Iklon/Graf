<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="753.0" prefWidth="958.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
<center>
    <LineChart>
        <xAxis>
            <NumberAxis autoRanging="false" lowerBound="-5.0" side="BOTTOM" upperBound="5.0" />
        </xAxis>
        <yAxis>
            <NumberAxis autoRanging="false" lowerBound="-5.0" side="LEFT" upperBound="5.0" />
        </yAxis>
    </LineChart>
</center>
<bottom>
    <HBox alignment="CENTER" spacing="10.0">
        <children>
            <Button mnemonicParsing="false" onAction="#draw" text="Vykreslit" />
            <Button mnemonicParsing="false" onAction="#load" onDragDetected="#load" text="Načíst soubor" />
            <Slider />
        </children>
    </HBox>
</bottom>
</BorderPane>
